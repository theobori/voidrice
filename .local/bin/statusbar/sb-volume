#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
1) setsid -w -f "$TERMINAL" -e pipewire-pulse-control; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
2) pactl set-sink-mute @DEFAULT_AUDIO_SINK@ toggle ;;
4) pactl set-sink-volume @DEFAULT_AUDIO_SINK@ +1% ;;
5) pactl set-sink-volume @DEFAULT_AUDIO_SINK@ -1% ;;
3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Fetching volume information
vol="$(pamixer --get-volume)"

# If muted, print ðŸ”‡ and exit.
[ "$(pamixer --get-mute)" = "true" ] && echo ðŸ”‡ && exit

# Truncate float to integer
vol=$(printf "%.0f" "$vol")

case 1 in
$((vol >= 70)) ) icon="ðŸ”Š" ;;
$((vol >= 30)) ) icon="ðŸ”‰" ;;
$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon$vol%"
